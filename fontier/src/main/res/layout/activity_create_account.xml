<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               app:srcCompat="@drawable/ic_left_arrow"
               android:adjustViewBounds="true"
               android:padding="@dimen/_10sdp"
               tools:ignore="ContentDescription,MissingConstraints,VectorDrawableCompat" android:id="@+id/backBtn"
               app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
               android:layout_marginStart="24dp" app:layout_constraintTop_toTopOf="parent"
               android:layout_marginTop="32dp"/>

    <com.wee3ventures.fontier.FontView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                       android:text="@string/create_account"
                                       android:textSize="@dimen/_20sdp"
                                       app:fontName="Poppins_Bold"
                                       android:id="@+id/createAccountlabel"
                                       app:layout_constraintTop_toBottomOf="@+id/backBtn"
                                       android:layout_marginTop="64dp" app:layout_constraintStart_toStartOf="parent"
                                       android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>

    <com.google.android.material.textfield.TextInputLayout android:id="@+id/userLayout"
                                                           style="@style/GDVO_INPUT_THEME"
                                                           android:layout_marginEnd="32dp"
                                                           app:layout_constraintEnd_toEndOf="parent"
                                                           android:layout_marginRight="32dp"
                                                           android:layout_marginStart="32dp"
                                                           app:layout_constraintStart_toStartOf="parent"
                                                           android:layout_marginLeft="32dp"
                                                           app:layout_constraintTop_toBottomOf="@id/createAccountlabel"
                                                           android:layout_marginTop="32dp">
        <com.google.android.material.textfield.TextInputEditText android:layout_width="match_parent"
                                                                 android:layout_height="wrap_content"
                                                                 android:textSize="18sp"
                                                                 android:id="@+id/userName"
                                                                 android:padding="@dimen/_10sdp"
                                                                 android:drawableStart="@drawable/ic_avatar_icon_gdo"
                                                                 android:drawableLeft="@drawable/ic_avatar_icon_gdo"
                                                                 android:drawablePadding="10sp"
                                                                 android:hint="@string/full_name"
                                                                 android:inputType="textPersonName"
                                                                 android:fontFamily="@font/poppins_medium"
                                                                 android:gravity="start|center"
                                                                 tools:targetApi="jelly_bean"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout android:id="@+id/mailLayout"
                                                           style="@style/GDVO_INPUT_THEME"
                                                           android:layout_marginEnd="32dp"
                                                           app:layout_constraintEnd_toEndOf="parent"
                                                           android:layout_marginRight="32dp"
                                                           android:layout_marginStart="32dp"
                                                           app:layout_constraintStart_toStartOf="parent"
                                                           app:passwordToggleEnabled="true"
                                                           android:layout_marginLeft="32dp"
                                                           app:layout_constraintTop_toBottomOf="@id/userLayout"
                                                           android:layout_marginTop="16dp">
        <com.google.android.material.textfield.TextInputEditText android:layout_width="match_parent"
                                                                 android:layout_height="wrap_content"
                                                                 android:textSize="18sp"
                                                                 android:padding="@dimen/_10sdp"
                                                                 android:id="@+id/mailTxt"
                                                                 android:drawableStart="@drawable/ic_mail"
                                                                 android:drawableLeft="@drawable/ic_mail"
                                                                 android:drawablePadding="10sp"
                                                                 android:inputType="textWebEmailAddress"
                                                                 android:gravity="start|center"
                                                                 android:fontFamily="@font/poppins_medium"
                                                                 android:hint="@string/email"
                                                                 tools:targetApi="jelly_bean"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout android:id="@+id/passLayout"
                                                           style="@style/GDVO_INPUT_THEME"
                                                           android:layout_marginEnd="32dp"
                                                           app:layout_constraintEnd_toEndOf="parent"
                                                           android:layout_marginRight="32dp"
                                                           android:layout_marginStart="32dp"
                                                           app:layout_constraintStart_toStartOf="parent"
                                                           app:passwordToggleEnabled="false"
                                                           android:layout_marginLeft="32dp"
                                                           app:layout_constraintTop_toBottomOf="@id/mailLayout"
                                                           android:layout_marginTop="16dp">
        <com.google.android.material.textfield.TextInputEditText android:layout_width="match_parent"
                                                                 android:layout_height="wrap_content"
                                                                 android:textSize="18sp"
                                                                 android:padding="@dimen/_10sdp"
                                                                 android:id="@+id/userPass"
                                                                 android:drawableStart="@drawable/ic_locked_icon_gdo"
                                                                 android:drawableLeft="@drawable/ic_locked_icon_gdo"
                                                                 android:drawablePadding="10sp"
                                                                 android:inputType="textPassword"
                                                                 android:gravity="start|center"
                                                                 android:fontFamily="@font/poppins_medium"
                                                                 android:hint="@string/pass"
                                                                 tools:targetApi="jelly_bean"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout android:id="@+id/confPassLayout"
                                                           style="@style/GDVO_INPUT_THEME"
                                                           android:layout_marginEnd="32dp"
                                                           app:layout_constraintEnd_toEndOf="parent"
                                                           android:layout_marginRight="32dp"
                                                           android:layout_marginStart="32dp"
                                                           app:layout_constraintStart_toStartOf="parent"
                                                           android:layout_marginLeft="32dp"
                                                           app:layout_constraintTop_toBottomOf="@id/passLayout"
                                                           android:layout_marginTop="16dp">
        <com.google.android.material.textfield.TextInputEditText android:layout_width="match_parent"
                                                                 android:layout_height="wrap_content"
                                                                 android:textSize="18sp"
                                                                 android:padding="@dimen/_10sdp"
                                                                 android:id="@+id/confPass"
                                                                 android:drawableStart="@drawable/ic_unlocked"
                                                                 android:drawableLeft="@drawable/ic_unlocked"
                                                                 android:drawablePadding="10sp"
                                                                 android:inputType="textVisiblePassword"
                                                                 android:gravity="start|center"
                                                                 android:fontFamily="@font/poppins_medium"
                                                                 android:hint="@string/conf_pass"
                                                                 tools:targetApi="jelly_bean"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content"
                                                       android:id="@+id/signUpBtn"
                                                       android:text="@string/sign_up"
                                                       style="@style/Widget.MaterialComponents.Button"
                                                       android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                                                       android:fontFamily="@font/poppins_medium"
                                                       android:textAllCaps="false"
                                                       android:textSize="18sp"
                                                       android:ems="7"
                                                       android:padding="10sp"
                                                       app:cornerRadius="30sp"
                                                       android:textColor="@color/white"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       android:layout_marginEnd="32dp"
                                                       android:layout_marginRight="32dp"
                                                       tools:targetApi="jelly_bean" android:layout_marginTop="32dp"
                                                       app:layout_constraintTop_toBottomOf="@+id/confPassLayout"/>

    <LinearLayout android:layout_width="0sp" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center" app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
                  android:layout_marginStart="32dp"
                  android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
                  android:id="@+id/linearLayout" android:layout_marginRight="32dp"
                  android:layout_marginEnd="32dp">
        <com.wee3ventures.fontier.FontView android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:text="@string/already_have_an_account"
                                           android:id="@+id/fontView"
                                           android:textSize="16sp"
                                           android:padding="5sp"
                                           app:fontName="Poppins_Light"/>

        <com.wee3ventures.fontier.FontView android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:text="@string/sign_in"
                                           android:textColor="#3F51B5"
                                           android:textSize="16sp"
                                           android:padding="5sp"
                                           android:id="@+id/signinBtn"
                                           android:background="?selectableItemBackground"
                                           app:fontName="Poppins_Bold"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>