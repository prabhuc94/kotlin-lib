<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="GDOTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">#3F51B5</item>
        <item name="colorPrimary">#6474D5</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/colorWhite</item>

        <!-- Additionally if you want animations when dialog opening -->
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/white</item>
    </style>
    <style name="GDVO_INPUT_THEME" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusTopStart">10sp</item>
        <item name="boxCornerRadiusTopEnd">10sp</item>
        <item name="boxCornerRadiusBottomStart">10sp</item>
        <item name="boxCornerRadiusBottomEnd">10sp</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextEnabled">true</item>

    </style>

    <!-- Base application theme. -->
    <style name="TbDocPickerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/tb_doc_picker_primary</item>
        <item name="colorPrimaryDark">@color/tb_doc_picker_primaryDark</item>
        <item name="colorAccent">@color/tb_doc_picker_accent</item>
    </style>

    <!--<item name="drawerArrowStyle">@style/DrawerIconStyle</item>
        <item name="actionOverflowButtonStyle">@style/customOptionOverflow</item>-->

    <!--<style name="AppTheme.Transparent" parent="TbMediaPickerTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        &lt;!&ndash;<item name="android:windowIsFloating">true</item>&ndash;&gt;
        <item name="android:backgroundDimEnabled">false</item>
    </style>-->

    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/md_text_white</item>
    </style>

    <style name="customOptionOverflow">
        <item name="android:src">@drawable/tb_doc_picker_ic_more_vert_white_24dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <!--Text -->
    <style name="TextTitle" parent="App.TextAppearance.h4.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextNormal" parent="App.TextAppearance.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/md_black_1000</item>
    </style>

    <!--Edit Text-->
    <style name="EditText_SingleLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/md_black_1000</item>
    </style>

    <style name="EditText_MultiLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLines">6</item>
        <item name="android:padding">5dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textColor">@color/md_black_1000</item>
    </style>


    <!--Button-->
    <style name="ButtonNormal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>


    <!--ImageModel-->
    <style name="ImageIcon">
        <item name="android:layout_width">@dimen/length_36</item>
        <item name="android:layout_height">@dimen/length_36</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">@dimen/offset_8</item>
    </style>

    <!-- Base application theme. -->
    <style name="TedImagePickerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/black87_disable</item>
    </style>

    <style name="TedImagePickerTheme.Zoom">

    </style>


    <!--Styles APp-->
    <style name="App.Button.Primary" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/md_grey_500</item>
        <item name="colorAccent">@color/tb_doc_picker_accent</item>
        <!--<item name="colorControlHighlight">@color/colorAccent</item>-->
    </style>

    <style name="App.ProgressBar.Primary" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/tb_doc_picker_accent</item>
    </style>

    <style name="App.Dialog.BottomSheet" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <!--For progress indicator for progressBar-->
    <style name="LinearProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/tb_doc_picker_accent</item>
        <!--<item name="android:progressBackgroundTint">@color/colorPrimary</item>-->
    </style>

    <style name="TbMediaPicker.Progress.Light" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/md_white_1000</item>
    </style>

    <!--Styles Item-->
    <style name="SubmitButton" parent="Widget.AppCompat.Button.Small">
        <item name="android:background">@drawable/tb_doc_picker_sc_button_round_accent</item>
        <item name="colorControlHighlight">?attr/colorAccent</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:color">@color/md_white_1000</item>
    </style>

    <style name="ToolBarStyle" parent="ToolBarStyle.Base"/>

    <style name="ToolBarStyle.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ToolBarStyle.Event" parent="ToolBarStyle">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:textStyle">normal</item>
    </style>
    <style name="BottomNavigation">
        <!--<item name="android:background">@color/md_white_1000</item>-->
        <!--<item name="itemBackground">@color/colorPrimary</item>-->
        <!--<item name="itemIconTint">@color/colorPrimary</item>-->
