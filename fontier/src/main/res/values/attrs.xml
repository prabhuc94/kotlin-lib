<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FontView">
        <attr name="fontName"/>
    </declare-styleable>
    <attr name="fontName" format="enum">
        <enum name="Poppins_Regular" value="1"/>
        <enum name="Poppins_Light" value="2"/>
        <enum name="Poppins_ExtraLight" value="3"/>
        <enum name="Poppins_Bold" value="4"/>
        <enum name="Poppins_Medium" value="5"/>
        <enum name="MerrieWeather_Regular" value="6"/>
        <enum name="MerrieWeather_Bold" value="7"/>
        <enum name="MerrieWeather_Light" value="8"/>
        <enum name="Dayrom" value="9"/>
        <enum name="DayromX" value="10"/>
    </attr>
    <declare-styleable name="CircleImage">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>

    <declare-styleable name="CheckView">
        <attr name="srcView" format="reference"/>
        <attr name="tickView" format="reference"/>
        <attr name="textView" format="string|reference"/>
        <attr name="subtitle" format="string|reference"/>
        <attr name="is_tick" format="boolean"/>
        <attr name="srcCorner" format="dimension|reference"/>
    </declare-styleable>

    <declare-styleable name="GenderCard">
        <attr name="bg_selector" format="reference"/>
        <attr name="male_text" format="reference|string"/>
        <attr name="female_text" format="reference|string"/>
        <attr name="genderfont"/>
        <attr name="male_selected" format="boolean"/>
        <attr name="female_selected" format="boolean"/>
        <attr name="android:hint"/>
        <attr name="android:textSize"/>
        <attr name="hint_Colour" format="color|reference"/>
        <attr name="text_Colour" format="color|reference"/>
        <attr name="genderHintSize" format="dimension|reference"/>
        <attr name="is_hint" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="FontCard">
        <attr name="hint_needed" format="boolean"/>
        <attr name="is_aadhar" format="boolean"/>
        <attr name="isHint" format="boolean"/>
        <attr name="isAadhar" format="boolean"/>
        <attr name="android:hint"/>
        <attr name="android:text"/>
        <attr name="android:textSize"/>
        <attr name="textColour" format="reference|color"/>
        <attr name="hintColour" format="color|reference"/>
        <attr name="hintSize" format="dimension|reference"/>
        <attr name="fontype"/>
    </declare-styleable>

    <declare-styleable name="HintValueView">
        <attr name="android:background"/>
        <attr name="android:hint"/>
        <attr name="android:text"/>
    </declare-styleable>

    <attr name="genderfont" format="enum">
        <enum name="Poppins_Regular" value="1"/>
        <enum name="Poppins_Light" value="2"/>
        <enum name="Poppins_ExtraLight" value="3"/>
        <enum name="Poppins_Bold" value="4"/>
        <enum name="Poppins_Medium" value="5"/>
        <enum name="MerrieWeather_Regular" value="6"/>
        <enum name="MerrieWeather_Bold" value="7"/>
        <enum name="MerrieWeather_Light" value="8"/>
        <enum name="Dayrom" value="9"/>
        <enum name="DayromX" value="10"/>
    </attr>

    <attr name="fontype" format="enum">
        <enum name="Poppins_Regular" value="1"/>
        <enum name="Poppins_Light" value="2"/>
        <enum name="Poppins_ExtraLight" value="3"/>
        <enum name="Poppins_Bold" value="4"/>
        <enum name="Poppins_Medium" value="5"/>
        <enum name="MerrieWeather_Regular" value="6"/>
        <enum name="MerrieWeather_Bold" value="7"/>
        <enum name="MerrieWeather_Light" value="8"/>
        <enum name="Dayrom" value="9"/>
        <enum name="DayromX" value="10"/>
    </attr>

    <declare-styleable name="Keyboard">
        <attr name="tintColor" format="color|reference"/>
        <attr name="dividerColor" format="color|reference"/>
        <attr name="backgroundColor" format="color|reference"/>
    </declare-styleable>


    <declare-styleable name="OtpViewTheme">
        <attr format="reference" name="otpViewStyle"/>
    </declare-styleable>

    <declare-styleable name="OtpView">
        <attr format="integer" name="itemCount"/>
        <attr format="dimension" name="itemWidth"/>
        <attr format="dimension" name="itemHeight"/>
        <attr format="dimension" name="itemRadius"/>
        <attr format="dimension" name="itemSpacing"/>
        <attr format="dimension" name="lineWidth"/>
        <attr format="reference|color" name="lineColor"/>
        <attr format="enum" name="viewType">
            <enum name="rectangle" value="0"/>
            <enum name="line" value="1"/>
            <enum name="none" value="2"/>
        </attr>
        <attr name="android:cursorVisible"/>
        <attr format="dimension" name="cursorWidth"/>
        <attr format="reference|color" name="cursorColor"/>
        <attr name="android:itemBackground"/>
        <attr format="boolean" name="hideLineWhenFilled"/>
        <attr format="boolean" name="state_filled"/>
        <attr format="boolean" name="rtlTextDirection"/>
        <attr format="string" name="maskingChar"/>
    </declare-styleable>

</resources>