<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/robotoCalendarDateTitleContainer"
        android:gravity="center_vertical"
        android:orientation="horizontal">

    <ImageView
            android:id="@+id/leftButton"
            style="@style/RobotoCalendarMonthArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/roboto_calendar_padding"
            android:layout_marginRight="@dimen/roboto_calendar_padding"
            app:srcCompat="@drawable/ic_attendance_left_arrow"
            tools:ignore="ContentDescription,VectorDrawableCompat" />

    <com.wee3ventures.fontier.FontView
            android:id="@+id/monthText"
            style="@style/RobotoCalendarMonthText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="dateTitle"
            app:fontName="Poppins_ExtraLight"
            tools:text="September 2018" />

    <ImageView
            android:id="@+id/rightButton"
            style="@style/RobotoCalendarMonthArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/roboto_calendar_padding"
            android:layout_marginRight="@dimen/roboto_calendar_padding"
            android:rotation="180"
            app:srcCompat="@drawable/ic_attendance_right_arrow"
            tools:ignore="ContentDescription,VectorDrawableCompat" />

</LinearLayout>